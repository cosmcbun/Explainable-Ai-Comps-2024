{
    "install": "pip3 install --user -r requirements.txt",
    "start": "uvicorn main:app",
    "watch": {
        "ignore": [
            "__pycache__"
        ],
        "install": {
            "include": [
                "^requirements\\.txt$"
            ]
        },
        "restart": {
            "include": [
                "\\.py$",
                "\\.html$",
                "\\.js$",
                "\\.json$"
            ]
        }
    }
}